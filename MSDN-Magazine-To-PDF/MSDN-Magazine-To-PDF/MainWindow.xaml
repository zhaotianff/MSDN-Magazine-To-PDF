<blur:BlurWindow x:Class="MSDN_Magazine_To_PDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSDN_Magazine_To_PDF"
        xmlns:blur="clr-namespace:TianXiaTech;assembly=BlurWindow"
        mc:Ignorable="d"
        Height="720" Width="1280" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="#FF4C99C9">
            <Label Content="MSDN-Magazine-To-PDF" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" Margin="10,0,0,0"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <ListBox Margin="3"/>
            </Grid>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="#FF4C99C9" 
              ShowsPreview="True"
              Width="3"/>
            <Grid Grid.Column="2">
                <ListBox Grid.Column="2" Margin="3"/>
            </Grid>
            <GridSplitter Grid.Column="3" HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="#FF4C99C9" 
              ShowsPreview="True"
              Width="3"/>
            <Grid>
                <Frame Grid.Column="4"/>
            </Grid>
        </Grid>
    </Grid>
</blur:BlurWindow>
